<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bottomColor"
    tools:context=".activity.PartnerChannelActivity">

    <com.example.diandi.base.CustomTitleBar
        android:id="@+id/titlebar"
        android:background="@color/whiteColor"
        app:right_text="更多"
        app:titlebar_type="11"
        app:left_icon="@drawable/back"
        app:title="合伙人通道"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="180dp"
          android:layout_marginTop="22dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:background="@drawable/green_check"
         >
          <com.example.diandi.base.CircleImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:scaleType="fitXY"
              app:type="circle"
              android:layout_marginLeft="26dp"
              android:layout_centerVertical="true"
              android:src="@drawable/a"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="34dp"
                android:orientation="vertical">
                <Button
                    android:layout_width="88dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="50dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:background="@drawable/partner_book"
                    android:textColor="@color/greenCheckColor"
                    android:text="合伙人手册"/>
                <Button
                    android:layout_width="88dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="26dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:textColor="@color/greenCheckColor"
                    android:background="@drawable/partner_book"
                    android:text="成为合伙人"/>


            </LinearLayout>


      </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/blue_check"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#99ffffff"
                 android:textSize="16sp"
                 android:layout_marginTop="24dp"
                 android:text="充值金额(元)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="28sp"
                android:layout_marginTop="22dp"
                android:textStyle="bold"
                android:text="69.86"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="14sp"
                android:text="20190302"
                android:layout_marginTop="24dp"/>

        </LinearLayout>


     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="充值"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="38dp"
         android:textSize="14sp"
         android:background="@drawable/recharge"
         android:textColor="@color/blueCheckColor"
         />

    </RelativeLayout>





</LinearLayout>