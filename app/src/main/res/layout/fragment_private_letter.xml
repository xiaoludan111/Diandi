<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bottomColor"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="私信"/>

         <TextView
             android:id="@+id/tv_creat_chat"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/whiteColor"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:textSize="18dp"
             android:layout_marginRight="22dp"
             android:text="创建群聊"/>
    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginTop="40dp"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <TextView
          android:id="@+id/tv_letter_fans"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="粉丝"
          android:gravity="center_horizontal"
          android:textColor="@color/whiteColor"
          android:drawableTop="@mipmap/ic_launcher"/>
       <TextView
           android:id="@+id/tv_letter_praise"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="赞"
           android:gravity="center_horizontal"
           android:textColor="@color/whiteColor"
           android:drawableTop="@mipmap/ic_launcher"/>
       <TextView
           android:id="@+id/tv_letter_comment"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="评论"
           android:gravity="center_horizontal"
           android:textColor="@color/whiteColor"
           android:drawableTop="@mipmap/ic_launcher"/>
       <TextView
           android:id="@+id/tv_letter_address"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="通讯录"
           android:gravity="center_horizontal"
           android:textColor="@color/whiteColor"
           android:drawableTop="@mipmap/ic_launcher"/>
   </LinearLayout>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rv_letter_list"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>






</LinearLayout>